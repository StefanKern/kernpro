rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Scraped job sites - require authentication to read
    match /job-scrapes/{document} {
      allow read: if request.auth != null; // Only authenticated users can read
      allow write: if false; // Only Cloud Functions/Admin SDK can write
    }
    
    // Scraping configuration - admin only
    match /scraping-config/{document} {
      allow read, write: if false; // Only Cloud Functions/Admin SDK
    }
    
    // Default: temporary open access for other collections (expires Nov 21, 2025)
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 11, 21);
    }
  }
}
